<!DOCTYPE html>
<html>
  <head>
    <title>Minke.XYZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag     "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_include_tag  'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="has-navbar-fixed-top">

    <% if flash[:notice] %>
      <div class="notification is-primary global-notification" id="flash-notice">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification" id="flash-alert">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar is-transparent is-fixed-top">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">Minke.XYZ</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExampleTransparentExample" class="navbar-menu">
        <% if action_name == "index" %>
        <div class="navbar-start">
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link" href="#">
              Recipe Filter
            </a>
            <div class="navbar-dropdown is-boxed">
              <a class="navbar-item" href="#">
                Breakfast
              </a>
              <a class="navbar-item" href="#">
                Appetizer
              </a>
              <a class="navbar-item" href="#">
                Snack
              </a>
              <a class="navbar-item" href="#">
                Dinner
              </a>
              <hr class="navbar-divider">
              <a class="navbar-item" href="#">
                Bread
              </a>
              <a class="navbar-item" href="#">
                Smoothie
              </a>
              <a class="navbar-item" href="#">
                Soup
              </a>
            </div>
          </div>
        </div>
        <% end %>
        <% if action_name == "show" || action_name == "new" %>
          <div class="navbar-start">
            <div class="navbar-item">
              <div class="field">
                <p class="control">
                  <%= link_to "Back", root_path, class: "button is-info is-inverted" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if action_name == "edit" %>
          <div class="navbar-start">
            <div class="navbar-item">
              <div class="field">
                <p class="control">
                  <%= link_to "Back", recipe_path, class: "button is-info is-inverted" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <% if action_name == "index" %>
              <p class="control">
                <input class="input" type="text" placeholder="Find a recipe...">
              </p>
              <% end %>
              <% if action_name == "show" %>
                <p class="control">
                  <%= link_to "Edit", edit_recipe_path, class: "button is-info" %>
                </p>
                <p class="control">
                  <%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: "button is-info is-danger" %>
                </p>
              <% end %>
              <p class="control">
                <%= link_to "New Recipe", new_recipe_path, class: "button is-primary" %>
              </p>
            </div>
          </div>
        </div>
      </div>

    </nav>

    <%= yield %>

  </body>
</html>
